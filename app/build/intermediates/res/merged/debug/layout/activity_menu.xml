<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinten.netpay.Menu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnBetalen"
        android:layout_width="162dp"
        android:layout_height="105dp"
        android:text="Betalen"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Betalen"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="162dp"
        android:layout_height="105dp"
        android:text="Account"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Account"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnOntvangen"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnOntvangen"
        android:layout_width="162dp"
        android:layout_height="105dp"
        android:text="Ontvangen"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="Ontvangen"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBetalen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
