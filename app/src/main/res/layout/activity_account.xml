<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinten.netpay.Account"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/ivContactBadge"
        android:layout_width="93dp"
        android:layout_height="95dp"
        app:srcCompat="@mipmap/ic_account"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/txtGerbuikersnaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="(Gebruikersnaam)"
        android:textColor="#000"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivContactBadge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="(Saldo)"
        android:textColor="#000"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGerbuikersnaam"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtWachtwoordBetaling"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="(Achternaam)"
        android:textColor="#000"
        android:textSize="12pt"
        app:layout_constraintLeft_toRightOf="@+id/ivContactBadge"
        app:layout_constraintTop_toBottomOf="@+id/txtVoornaam"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtVoornaam"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="(Voornaam)"
        android:textColor="#000"
        android:textSize="12pt"
        app:layout_constraintLeft_toRightOf="@+id/ivContactBadge"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvGebruikersnaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gebruikersnaam"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="-17dp"
        app:layout_constraintBottom_toTopOf="@+id/txtGerbuikersnaam"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/Saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtSaldo"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txtSaldo"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/btnTransacties"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:text="Transacties"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaldo"
        tools:ignore="HardcodedText"
        app:layout_constraintHorizontal_bias="0.507" />

    <Button
        android:id="@+id/btnWachtwoordV"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Wachtwoord veranderen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTransacties" />
</android.support.constraint.ConstraintLayout>
