<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinten.netpay.WachtwoordVeranderen">

    <EditText
        android:id="@+id/txtOudWachtwoord"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Oud wachtwoord"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtNieuwWachtwoord"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nieuw wachtwoord"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtOudWachtwoord"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginLeft="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/txtNieuwWachtwoord2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nieuw wachtwoord herhalen"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNieuwWachtwoord"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnWachtwoordV"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Wachtwoord veranderen"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNieuwWachtwoord2"
        tools:ignore="HardcodedText" />
</android.support.constraint.ConstraintLayout>
