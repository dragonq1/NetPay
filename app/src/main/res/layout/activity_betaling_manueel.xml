<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinten.netpay.BetalingManueel">

    <EditText
        android:id="@+id/txtBedrag"
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="bedrag"
        android:inputType="numberDecimal"
        android:textColor="#07bc40"
        android:textSize="70px"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/txt1"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_weight="0.13"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="euro betalen aan:"
        android:textSize="70px"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintLeft_toRightOf="@+id/txtBedrag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <EditText
        android:id="@+id/txt1"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_weight="0.13"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="Ik wil "
        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,PxUsage" />

</android.support.constraint.ConstraintLayout>
